<doctype html>
    <html>
        <head>
            <title> 게시판 입력 </title>
        </head>
        <body>
            <h1> 게시판 입력 </h1>
            <form action ="addBoard" method="post">
                <table border="1">
                    <tr>
                        <th> 비밀번호 </th>
                        <td> 
                            <input type="password" name="board_pw">
                        </td>
                    </tr>
                    <tr>
                        <th> 제목 </th>
                        <td>
                            <input type="text" name="board_title">
                        </td>
                    </tr>
                    <tr>
                        <th> 내용 </th>
                        <td>
                            <textarea name="board_content" rows="5" cols="50"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <th> 작성자 </th>
                        <td>
                            <input type="text" name="board_user">
                        <td>
                    </tr>
                </table>       
                <button type="submit"> 글올리기 </button>
            </form>
        </body>
    </html>